<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".UI.Loginassignment.Sign_up">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="NAME"
            android:drawablePadding="10dp"
            android:background="@color/background"
            android:drawableLeft="@drawable/name"
            android:id="@+id/editText5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="EMAIL"
                android:layout_marginTop="5dp"
                android:drawablePadding="10dp"
                android:background="@color/background"
                android:drawableLeft="@drawable/email_icon"
                android:id="@+id/editText3" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="PASSWORD"
                android:layout_marginTop="5dp"
                android:drawablePadding="10dp"
                android:background="@color/background"
                android:drawableLeft="@drawable/password_icon"
                android:id="@+id/editText" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:hint="CONFIRM PASSWORD"
                android:background="@color/background"
                android:id="@+id/editText1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:background="@color/background"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/birthdate_icon"
                android:hint="BIRTHDATE"
                android:drawablePadding="10dp"
                android:gravity="center|start" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.4">
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/DD"
                android:layout_weight="1">
            </Spinner>
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/MM"
                android:layout_toLeftOf="@+id/spinner3"
                android:layout_weight="1">
            </Spinner>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/YY"
                android:id="@+id/spinner3">
            </Spinner>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:background="@color/background"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/gender_icon"
                android:drawablePadding="10dp"
                android:gravity="center|start"
                android:hint="GENDER"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHighlight="@color/red"
                android:text="MALE"
                android:gravity="center"
                android:id="@+id/textView1"
                android:textColorHint="@color/blue"
                android:layout_weight="1"/>
            <Switch
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/toggle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="FEMALE"
                android:id="@+id/textView"
                android:textColorHint="@color/red"
                android:textColorHighlight="@color/red"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:background="@color/background"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_weight="0.3"
                android:drawablePadding="10dp"
                android:textColorHint="@color/blue"
                android:drawableLeft="@drawable/strength_icon"
                android:gravity="center|start"
                android:hint="Strength Wise"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:textColorHint="#f7f741"
                android:hint="Week"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <SeekBar
                android:id="@+id/seek1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MySeekBarTheme"
                style="@style/Base.Widget.AppCompat.SeekBar.Discrete"
                android:max="4"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@color/background"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_weight="0.3"
                android:drawablePadding="10dp"
                android:textColorHint="@color/blue"
                android:drawableLeft="@drawable/fitness_icon"
                android:gravity="center|start"
                android:hint="Fitness Wise"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:textColorHint="#ce8c12"
                android:hint="Verry Fit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <SeekBar
                android:id="@+id/seek2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="4"
                android:theme="@style/MySeekBarTheme1"
                style="@style/Base.Widget.AppCompat.SeekBar.Discrete"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@color/background"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_weight="0.3"
                android:drawablePadding="10dp"
                android:textColorHint="@color/blue"
                android:drawableLeft="@drawable/flexibilty_icon"
                android:gravity="center|start"
                android:hint="Flexiblity wise"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_weight="0.7"
                android:textColorHint="#05615e"
                android:gravity="center"
                android:hint="Flexible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <SeekBar
                android:id="@+id/seek3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MySeekBarTheme2"
                style="@style/Base.Widget.AppCompat.SeekBar.Discrete"
                android:max="4"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_height="0dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:background="@color/yellow"
            android:textSize="20dp"
            android:drawableRight="@drawable/foward_icon"
            android:text="SIGN UP"/>
    </LinearLayout>
</LinearLayout>