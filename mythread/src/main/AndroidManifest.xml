<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chromeinfotech.mythread">

    <!-- Permission: Allow Connect to Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permission: Writing to SDCard -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.chromeinfotech.Ui.mythread.MainActivity" />
        <activity android:name="com.chromeinfotech.Ui.MainActivity.Main2Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.chromeinfotech.Ui.Handler.HandlerActivity" />
        <activity android:name="com.chromeinfotech.Ui.AsyncTask.AsyncTaskActivity" />
        <activity android:name="com.chromeinfotech.Ui.RunOnUiThread.RunOnUiThreadActivity" />
        <activity android:name="com.chromeinfotech.Ui.RunOnUiThread.Downloaddatauithread" />
        <activity android:name="com.chromeinfotech.Ui.AsyncTask.DownloadAsyncTask" />
        <activity android:name="com.chromeinfotech.Ui.Handler.DownloaddatahandlerThread" />

    </application>

</manifest>