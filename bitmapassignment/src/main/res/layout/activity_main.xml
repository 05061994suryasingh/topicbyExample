<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.chromeinfotech.bitmapassign.MainActivity">


<ImageView
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btnclick"
    android:layout_centerHorizontal="true"
    android:id="@+id/imgfinal"
    android:src="@drawable/red_curved_bg"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgfinal"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgfinal1"
        android:src="@drawable/indecation_bg"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/btnclick"
        android:text="click"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_text1"/>
</RelativeLayout>
